<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stack.birds.helpus.LandingActivity.LandingActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabDots"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"/>

            <ImageView
                android:id="@+id/landing_icon"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginTop="93dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:id="@+id/first_view_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/landing_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF9632" />

                <TextView
                    android:id="@+id/landing_text_big"
                    android:text="landing_text"
                    android:textSize="32dp"
                    android:textColor="#FF9632"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/landing_to_another"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/landing_to_login"
                    android:text="로그인"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FF9632"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/landing_to_signup"
                    android:text="처음이에요"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#F4F4F4"
                    android:layout_marginBottom="40dp"/>


            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
